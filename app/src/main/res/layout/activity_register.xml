<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeracc.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorSurfaceBackground" />

        <TextView
            android:id="@+id/text_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_horizontal"
            android:text="@string/reg_tittle_client"
            android:textColor="@color/colorTextUniversal"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorSurfaceBackground" />

        <!-- EMAIL LABEL -->
        <TextView
            android:id="@+id/Correo_Register"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@id/register_email"
            android:lineSpacingExtra="5sp"
            android:text="@string/introduce_t"
            android:textAppearance="@style/TextAllReg" />

        <RelativeLayout
            android:id="@+id/fieldEmailRegister"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:background="@drawable/field_bg">

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="emailAddress"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:hint="@string/reg_email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#000000"
                android:textColorHint="#444444"
                android:textSize="14sp"
                android:importantForAccessibility="yes" />

        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorSurfaceBackground" />

        <!-- PASSWORD LABEL -->
        <TextView
            android:id="@+id/Password_Register"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@+id/register_password"
            android:lineSpacingExtra="5sp"
            android:text="@string/reg_password"
            android:textAppearance="@style/TextAllReg" />

        <RelativeLayout
            android:id="@+id/fieldPassword"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:background="@drawable/field_bg">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:hint="@string/reg_password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#000000"
                android:textColorHint="#444444"
                android:textSize="14sp"
                android:importantForAccessibility="yes" />

        </RelativeLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorSurfaceBackground" />

        <!-- CONFIRM PASSWORD LABEL -->
        <TextView
            android:id="@+id/Password_RegisterConfirm"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@id/register_passwordconfirm"
            android:lineSpacingExtra="5sp"
            android:text="@string/reg_passwordconfirm"
            android:textAppearance="@style/TextAllReg" />

        <RelativeLayout
            android:id="@+id/fieldPasswordConfirm"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:background="@drawable/field_bg">

            <EditText
                android:id="@+id/register_passwordconfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:hint="@string/reg_passwordconfirm"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#000000"
                android:textColorHint="#444444"
                android:textSize="14sp"
                android:importantForAccessibility="yes" />

        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorSurfaceBackground" />

        <!-- GENERO LABEL -->
        <TextView
            android:id="@+id/Register_genero"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@id/radioGroupGender"
            android:lineSpacingExtra="5sp"
            android:text="@string/reg_genero"
            android:textAppearance="@style/TextAllReg" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_male" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_female" />

            <RadioButton
                android:id="@+id/nosay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_other" />

        </RadioGroup>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorSurfaceBackground" />

        <!-- TIPO CUENTA LABEL -->
        <TextView
            android:id="@+id/Register_tipocuenta"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@id/button_negocio"
            android:lineSpacingExtra="5sp"
            android:text="@string/reg_title_select"
            android:textAppearance="@style/TextAllReg"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_group_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_negocio"
                style="@style/ToggleGoldStyle"
                android:checkable="true"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reg_bussines_select"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cliente"
                style="@style/ToggleGoldStyle"
                android:checkable="true"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reg_client_select"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <Button
            android:id="@+id/button_register_continue"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/register_continue"
            android:textAllCaps="false"
            android:textColor="@color/colorTextUniversalInverse"
            app:backgroundTint="@color/colorTextUniversal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
