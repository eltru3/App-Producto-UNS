<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeracc.RegisterActivityClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/icon_leave"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_gravity="start"
            android:layout_marginTop="-120dp"
            android:layout_marginStart="0dp"
            android:padding="0dp" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorSurfaceBackground" />

        <TextView
            android:id="@+id/text_login_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_horizontal"
            android:text="@string/reg_cli_tittle_client"
            android:textColor="@color/colorTextUniversal"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorSurfaceBackground" />

        <TextView
            android:id="@+id/text_cli_name"
            android:labelFor="@id/cli_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/reg_cli_name"
            android:textColor="@color/colorTextUniversal"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cli_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:autofillHints="username"
            android:textSize="20sp" />

        <!-- GENERO LABEL -->
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorSurfaceBackground" />

        <TextView
            android:id="@+id/Register_genero"
            android:layout_width="327dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:labelFor="@id/radioGroupGender"
            android:lineSpacingExtra="5sp"
            android:text="@string/reg_genero"
            android:textAppearance="@style/TextAllReg" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_male" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_female" />

            <RadioButton
                android:id="@+id/nosay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTextUniversalInverse"
                android:text="@string/gender_other" />

        </RadioGroup>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorSurfaceBackground" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"/>

        <Button
            android:id="@+id/buttonRegisterClient"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/reg_cli_create"
            android:textColor="@color/colorTextUniversalInverse"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"

            app:backgroundTint="@color/colorTextUniversal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>